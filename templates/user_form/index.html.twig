{% extends 'base.html.twig' %}

{% block title %}Pizzalero{% endblock %}

{% block body %}
    <div class="ms-3">
        <h2 class="">Iscription</h2>
        {{ form_start(form) }}
        <div class="">{{ form_label(form.name) }}</div>
        <div class="mb-3">{{ form_widget(form.name) }}</div>
        <div class="">{{ form_label(form.firstname) }}</div>
        <div class="mb-3">{{ form_widget(form.firstname) }}</div>
        <div class="">{{ form_label(form.mail) }}</div>
        <div class="mb-3">{{ form_widget(form.mail) }}</div>
        <div class="">{{ form_label(form.password) }}</div>
        <div class="mb-3">{{ form_widget(form.password) }}</div>
        {{ form_rest(form) }}
        <button class="btn btn-primary" type="submit">S'inscrire</button>
        {{ form_end(form) }}
    </div>
    
{% endblock %}
